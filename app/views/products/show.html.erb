<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @product.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>

    <p>
      <strong>Count:</strong>
      <%= @product.count %>
    </p>

    <p>
      <strong>Image</strong>
      <%= image_tag attachment_url(@product, :image, :fill, 300, 300, format: "jpg") %>
    </p>

    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %>
    <%= link_to 'Back', products_path, class: 'btn btn-default' %>
    <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>

